#!/bin/ksh -l
#SBATCH --qos=normal
#SBATCH --mem=200000
#SBATCH --ntasks=16
#SBATCH --ntasks-per-core=1
#SBATCH --time=100

cd $SCRATCH/images/transcription_figures

rm ispd.mp4
# Get rid of empty images - they make ffmpeg stop processing
#  These usually come from disc problems in the creation step.
find ispd/*.png -type f -empty -delete

ffmpeg -r 24 -pattern_type glob -i ispd/\*.png -vf reverse -c:v libx264 -threads 16 -preset slow -tune animation -profile:v high -level 4.2 -pix_fmt yuv420p -crf 25 -c:a copy ispd.mp4
